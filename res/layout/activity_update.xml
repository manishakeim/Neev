<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"  >

       <Button
        android:id="@+id/mmbutton6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mmbutton7"
        android:layout_centerHorizontal="true"
        android:text="Customer Details" />

    <TextView
        android:id="@+id/mmtextView1"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#DC143C"
        android:layout_centerHorizontal="true"
        android:text="MAIN MENU"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/mmbutton2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mmbutton1"
        android:layout_below="@+id/mmbutton3"
        android:text="Place Order" />

    <Button
        android:id="@+id/mmbutton1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mmtextView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Raw Material" />

    <Button
        android:id="@+id/mmbutton5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mmbutton2"
        android:layout_below="@+id/mmbutton4"
        android:text="Delivery" />

    <Button
        android:id="@+id/mmbutton4"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mmbutton2"
        android:layout_centerHorizontal="true"
        android:background="#B22222"
        android:text="In Transit"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/mmbutton7"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mmbutton5"
        android:layout_centerHorizontal="true"
        android:background="#B22222"
        android:text="Supplier Details"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/mmbutton3"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mmbutton1"
        android:layout_centerHorizontal="true"
        android:background="#B22222"
        android:text="Furnished Products"
        android:textColor="#FFFFFF" />


</RelativeLayout>
</ScrollView>
