<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.neev.Customer" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/ceditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ctextView1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/ctextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Customer Contact No."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/ccheckBox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ceditText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="#ff9800"
        android:text="Update Address"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ceditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ccheckBox1"
        android:layout_below="@+id/ccheckBox1"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="New Address"
        android:inputType="textPostalAddress" />

    <CheckBox
        android:id="@+id/ccheckBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ceditText1"
        android:layout_below="@+id/ceditText1"
        android:layout_marginTop="32dp"
        android:background="#ff9800"
        android:text="Update Phone"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ceditText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ccheckBox2"
        android:layout_below="@+id/ccheckBox2"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="New Phone no."
        android:inputType="phone" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/cbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ceditText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Update" />

</RelativeLayout>
</ScrollView>
